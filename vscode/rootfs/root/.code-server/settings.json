{
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/deps/**": true
    },
    "search.exclude": {
        "**/__pycache__/**": true,
        "**/deps/**": true
    },
    "files.associations": {
        "*.dash": "yaml"
    },
    "editor.selectionClipboard": false,
    "terminal.integrated.copyOnSelection": true,
    "settings": {
        "editor.tabSize": 2,
        "editor.renderWhitespace": "boundary",
        "yaml.customTags": [
            "!env_var",
            "!include_dir_list",
            "!include_dir_merge_list",
            "!include_dir_merge_named",
            "!include_dir_named",
            "!include",
            "!secret",
            "!yaml"
        ]
    }
}
